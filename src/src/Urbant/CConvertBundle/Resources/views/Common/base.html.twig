<!doctype HTML>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block page_title %}{% endblock %} - Contents Converter</title>
    
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
    
    <link rel="stylesheet" href="{{ asset('bundles/urbantcconvert/bootstrap/css/bootstrap.min.css') }}">
    <script type="text/javascript" src="{{ asset('bundles/urbantcconvert/bootstrap/js/bootstrap.min.js') }}"></script>
    
</head>

<body>

    <div class="container">
    
        <header class="row">
            <h1>Contents Converter</h1>
            
            <div class="navbar">
                <div class="navbar-inner">
                    <div class="container">
                        <a href="" class="brand">Title</a>

                        <ul class="nav">
{% for menuCatId, menuCat in _menues %}
        {% set isCurrentCat = (menuCatId == _catId) ? 1 : 0 %}
        {% set menuClass = isCurrentCat ? 'active' : '' %}
        {% set subMenuDivClass = isCurrentCat ? 'show' : '' %}
        <li class="{{ menuClass }}"><a href="{{ menuCat.url }}">{{ menuCat.name }}</a></li>
{% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
            
        </header>
    
    
        <div id="body" class="row">
            <div class="span12">
                {% block body %}
                {% endblock %}
            </div>
        </div>
        
        <footer>
        </footer>
    
    <!-- /container -->
    </div>

</body>

</html>