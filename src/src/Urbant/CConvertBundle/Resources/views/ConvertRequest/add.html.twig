{% extends 'UrbantCConvertBundle:Common:base.html.twig' %}

{% block body %}

<div class="row">
    <h1>Add request</h1>
    
    {% for flashMessage in app.session.flashbag.get('request_add_message') %}
    <div class="alert alert-success">{{ flashMessage }}</div>
    {% endfor %}

    <form action="{{ path('UrbantCConvertBundle_request_create') }}" method="post" {{ form_enctype(form) }} >
        {{ form_widget(form) }}
        
        <input type="submit" value="保存" class="btn-primary" />
    </form>

{% endblock %}