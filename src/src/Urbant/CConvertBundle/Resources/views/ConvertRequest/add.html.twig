{% extends 'UrbantCConvertBundle:Common:base.html.twig' %}

{% block body %}

<div class="row">
    <h1>Add request</h1>
    
    {% if app.session.hasFlash('request_add_message') %}
    <div class="alert alert-success">{{ app.session.flash('request_add_message') }}</div>
    {% endif %}



    <form action="{{ path('UrbantCConvertBundle_request_create') }}" method="post" {{ form_enctype(form) }} >
        {{ form_widget(form) }}
        
        <input type="submit" value="保存" class="btn-primary" />
    </form>

{% endblock %}