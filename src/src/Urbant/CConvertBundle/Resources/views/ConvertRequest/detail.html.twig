{% extends '::base.html.twig' %}

{% block body %}

<div id="page-heading"><h1>Request detail</h1></div>

<table border="0" width="100%" cellpadding="0" cellspacing="0" id="content-table">
<tr>
    <th rowspan="3" class="sized"><img src="{{ asset('bundles/urbantcconvert/images/shared/side_shadowleft.jpg') }}" width="20" height="300" alt="" /></th>
    <th class="topleft"></th>
    <td id="tbl-border-top">&nbsp;</td>
    <th class="topright"></th>
    <th rowspan="3" class="sized"><img src="{{ asset('bundles/urbantcconvert/images/shared/side_shadowright.jpg') }}" width="20" height="300" alt="" /></th>
</tr>
<tr>
    <td id="tbl-border-left"></td>
    <td>
    <!--  start content-table-inner -->
    <div id="content-table-inner">
    
    <table border="0" width="100%" cellpadding="0" cellspacing="0">
    <tr valign="top">
    <td>
    

        <!-- start id-form -->
        <table border="0" cellpadding="0" cellspacing="0"  id="id-form">
            <tr>
                <th valign="top">Rule:</th>
                <td>
                    {% if request.rule %}
                        {{ request.rule.name }}
                    {% else %}
                        -
                    {% endif %}
                </td>
                <td>
                <!--
                <div class="error-left"></div>
                <div class="error-inner">This field is required.</div>
                -->
                </td>
            </tr>
            <tr>
                <th valign="top">URL:</th>
                <td>{{ request.url }}</td>
                <td>
                <!--
                <div class="error-left"></div>
                <div class="error-inner">This field is required.</div>
                -->
                </td>
            </tr>
            <tr>
                <th valign="top">Status:</th>
                <td>{{ request.getStatusName('-') }}</td>
                <td>
                <!--
                <div class="error-left"></div>
                <div class="error-inner">This field is required.</div>
                -->
                </td>
            </tr>
            <tr>
                <th valign="top">Log:</th>
                <td>{{ request.log | nl2br }}</td>
                <td>
                <!--
                <div class="error-left"></div>
                <div class="error-inner">This field is required.</div>
                -->
                </td>
            </tr>
            <tr>
                <th>&nbsp;</th>
                <td valign="top">
                    <input type="button" value="編集" onClick="location.href='{{ path('UrbantCConvertBundle_request_edit', {'id': request.id}) }}';""  />
                    <input type="button" value="戻る" onClick="location.href='{{ path('UrbantCConvertBundle_request_list') }}';"  />
                </td>
                <td></td>
            </tr>
        </table>
        <!-- end id-form  -->

    </td>

        
</td>
</tr>
<tr>
<td><img src="{{ asset('bundles/urbantcconvert/images/shared/blank.gif') }}" width="695" height="1" alt="blank" /></td>
<td></td>
</tr>
</table>
 
<div class="clear"></div>


{% endblock %}
